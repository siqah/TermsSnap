{
  "name": "TermsSnap",
  "version": "1.0",
  "description": "AI-powered Terms & Conditions summarizer",
  "manifest_version": 3,
  "permissions": ["activeTab", "storage", "notifications"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.svg",
      "48": "images/icon48.svg",
      "128": "images/icon128.svg"
    }
  },
  "icons": {
    "16": "images/icon16.svg",
    "48": "images/icon48.svg",
    "128": "images/icon128.svg"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*terms*", "*://*/*privacy*", "*://*/*tos*", "*://*/*conditions*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.json", "*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
